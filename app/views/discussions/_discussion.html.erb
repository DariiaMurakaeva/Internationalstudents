<div id="<%= dom_id discussion %>">

  <%= image_tag discussion.discussion_image.url, width: 600 %>
  
  <h2>
    <%= link_to discussion.title, discussion_path(discussion) %>
  </h2>
  <p>
    <strong>Author:</strong>
    <%= discussion.user_id %>
  </p>

  <p>
    <strong>Title:</strong>
    <%= discussion.title %>
  </p>

  <p>
    <strong>Content:</strong>
    <%= discussion.content %>
  </p>

  <p>
    <strong>Tags:</strong>
    <%= discussion.tags %>
  </p>

</div>
