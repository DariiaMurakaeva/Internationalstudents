<%= form_with(model: discussion, local: true, html: { class: "discussion-form" }) do |form| %>

  <% if discussion.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
        <% discussion.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form_dis_question">
    <%= form.label :Вопрос, style: "display: block" %>
    <%= form.text_field :title, placeholder: "Задайте свой вопрос тут", class: "form-control" %>
  </div>

  <div class="form_dis_category">
    <%= form.label :Категория %>
    <%= form.text_field :tag, placeholder: "Впишите категорию", class: "form-control" %>
  </div>

  <div class="form_dis_desc">
    <%= form.label :Описание, style: "display: block" %>
    <%= form.text_area :content, placeholder: "", class: "form-control", rows: 5 %>
  </div>

  

  <div>
    <%= form.submit "ОПУБЛИКОВАТЬ", class: "btn btn-primary" %>
  </div>
<% end %>