<div id="<%= dom_id discussion %>">

    <%= image_tag discussion.discussion_image.url, width: 600 %>

    <p>
        <strong>Author:</strong>
        <%= discussion.user_id %>
    </p>

    <p>
        <strong>Title:</strong>
        <%= discussion.title %>
    </p>

    <p>
        <strong>Content:</strong>
        <%= discussion.content %>
    </p>

    <p>
        <strong>Tags:</strong>
        <%= discussion.tags %>
    </p>

</div>