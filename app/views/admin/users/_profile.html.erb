<div class="user-card">
    <div class="user-card-header">
        <h2><%= user.profile&.name %></h2>
        <p><strong>email:</strong> <%= user.email %></p>
        <p><strong>тип пользователя:</strong> <%= user.user_role %></p>
    </div>
    <div class="user-card-footer">
        <%= link_to "Редактировать", edit_admin_user_path(user), class: "btn btn-warning" %>
        <%= link_to "Удалить", admin_user_path(user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
</div>
