<!DOCTYPE html>
<html>
  <head>
    <%= display_meta_tags site: "Юнглас", separator: "—", reverse: true %>
    <title><%= content_for(:title) || "Playground" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="<%= asset_path('favicon.png') %>" type="image/png">
    <link rel="icon" href="<%= asset_path('favicon.svg') %>" type="image/svg+xml">
    <link rel="apple-touch-icon" href="<%= asset_path('favicon.png') %>">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <p style="color: red"><%= alert %></p>
    <p style="color: green"><%= notice %></p>

    <%= render "menubar" %>

    <%= yield %>
    <%= render "footer" %>
  </body>
</html>
